        <% if (loggedIn) { %>
          <div class="nav me-3 text-end">
            <div><a href="./employeeEdit-admin" class="nav-link fontAll text-header">Admin, <%=UserData.username%></a></div>
            <div><a href="./logout" class=" btn btn-danger ">ออกจากระบบ</a></div>
          </div>
          <% } %>
          
      </header>
    </section>
    
        <!-- Button trigger modal -->
        <div id="create-service">
          <a href="#exampleModal" class="nav-link fontAll" data-bs-toggle="modal">เพิ่มการจองคิว</a>
        </div>

        <div><h1 class="headtext">ตารางการจองคิวลูกค้า</h1></div>
        <div class="line-4"></div>

        <div id="infoTable">
          <div class="container">
            <table >
              <tr class="sectionTable">
                <td class="fontAll ">ลำดับ</td>
                <td class="fontAll ">ชื่อผู้ใช้</td>
                <td class="fontAll ">วันที่</td>
                <td class="fontAll ">เวลา</td>
                <td class="fontAll ">บริการ</td>
                <td class="fontAll ">พนักงาน</td>
                <td></td>
              </tr> 
              <tr class="infoTable">
                <td class="fontAll ">1</td>
                <td class="fontAll ">yamada</td>
                <td class="fontAll ">10/07/65</td>
                <td class="fontAll ">13.00-14.00</td>
                <td class="fontAll ">ย้อมผม</td>
                <td class="fontAll ">พนักงาน A</td>
                <td>
                    <a href="#" class="nav-link button" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                    </a>
                </td>
              </tr>
              <tr class="infoTable">
                <td class="fontAll ">2</td>
                <td class="fontAll ">Taara</td>
                <td class="fontAll ">10/07/65</td>
                <td class="fontAll ">15.00-16.00</td>
                <td class="fontAll ">สระ-ไดร์-เซต</td>
                <td class="fontAll ">พนักงาน B</td>
                <td>
                  <a href="#" class="nav-link button" >
                  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                  </svg>
                  </a>
                </td>
              </tr>
            </table>
          </div>
      </div>
    
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">เพิ่มการจองคิวลูกค้า</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form action="" method="POST">
              <div class="modal-body">
                <div class="inbody">
                  <div class='row'>
                    <label class="textque">ชื่อลูกค้า</label>
                    <input 
                    type="text" 
                    placeholder="ชื่อลูกค้า" 
                    class="form-control" 
                    name="firstname" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เบอร์โทรศัพท์ลูกค้า</label>
                    <input 
                    type="tel" 
                    placeholder="0xx-xxx-xxxx" 
                    class="form-control" 
                    name="phonenum" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกวันที่</label>
                    <input id="dateBooking"
                    type="date" min="0000-00-00" max="0000-00-00"
                    placeholder="วว/ดด/ปปปป" 
                    class="form-control" 
                    name="date_service" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกบริการ</label>
                    <select name="chooseServiceAdmin" id="">
                      <option value="" selected disabled hidden></option>
                      <% ServiceDataList.forEach(serviceData =>{ %> 
                        <option value= "<%= serviceData.service_name  %>"> <%= serviceData.service_name  %> </option>
                      <% }) %> 
                  </select>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกเวลา</label>
                    <input 
                    type="time" 
                    placeholder="เวลา" 
                    class="form-control" 
                    name="time_service" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque"">เลือกพนักงาน</label>
                    <select name="edu" id="">
                      <option value="" selected disabled hidden></option>
                      <% empList.forEach(emp =>{ %> 
                        <option value= "<%= emp.firstname %>" <%= emp.lastname %>> <%= emp.firstname %>  <%= emp.lastname %></option>
                      <% }) %> 
                  </select>
                  </div>

                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="buttonbt">บันทึก</button>
                <button type="button" class="buttoncan" data-bs-dismiss="modal">ยกเลิก</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- JavaScript-->
      <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" 
        crossorigin="anonymous">
      </script>
      <script 
        src="./js/queuebooking-admin.js" 
        charset="utf-8">
      </script> 

</body>
</html>