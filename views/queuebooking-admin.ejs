<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Queue Booking</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" href="./css/admin.css">

    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Noto+Sans+Thai:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

</head>

<body class="b1">
    
  <!-- Header หลัก-->
  <section id="header-employee">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-around py-4 ">
        <div class="col-md-1 mb-2 mb-md-0 ">
        </div>
  
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 primary">
          <li><a href="./home-admin" id="homeHeaderEmployee" class=" nav-link px-3 text-header fontAll ">แก้ไขหน้าเว็บ</a></li>
          <li><a href="./service-admin" id="servicesHeaderEmployee"  class="nav-link px-3 text-header fontAll ">บริการของร้าน</a></li>
          <li><a href="#" id="userHeaderEmployee" class="active nav-link px-3 text-header fontAll ">ลูกค้า</a> 
            <ul class="sub">
              <li><a href="./queuebooking-admin" style="text-decoration:none active " >ตารางการจองคิว</a></li>
              <li><a href="./pay-admin" style="text-decoration:none ">การชำระเงิน</a></li>
            </ul>
          </li>
          <li><a href="#" id="employeeHeaderEmployee" class="nav-link px-3 text-header fontAll ">พนักงาน</a>
            <ul class="sub">
              <li><a href="./employeetable-admin" style="text-decoration:none ">ตารางพนักงาน</a></li>
              <li><a href="./employeeinformation-admin" style="text-decoration:none ">ข้อมูลพนักงาน</a></li> 
            </ul>
          </li>
          <li><a href="./stock-admin" id="stockHeaderEmployee" class="nav-link px-3 text-header fontAll ">Stock</a></li>
          <li><a href="./chatbot-admin" id="chatbot" class="nav-link px-3 text-header fontAll ">Chat Bot</a></li>
          <li><a href="./report-admin" id="report" class="nav-link px-3 text-header fontAll ">Report</a></li>
        </ul>
  
        <% if (loggedIn) { %>
          <div class="nav me-3 text-end">
            <div><a href="./employeeEdit-admin" class="nav-link fontAll text-header">Admin, <%=UserData.username%></a></div>
            <div><a href="./logout" class=" btn btn-danger ">ออกจากระบบ</a></div>
          </div>
          <% } %>
          
      </header>
    </section>
    
        <!-- Button trigger modal -->
        <div id="create-service">
          <a href="#exampleModal" class="nav-link fontAll" data-bs-toggle="modal">เพิ่มการจองคิว</a>
        </div>

        <div><h1 class="headtext">ตารางการจองคิวลูกค้า</h1></div>
        <div class="line-4"></div>

        <div id="infoTable">
          <div class="container">
            <table >
              <tr class="sectionTable">
                <td class="fontAll infoBooking order">ลำดับ</td>
                <td class="fontAll infoBooking">ชื่อลูกค้า</td>
                <td class="fontAll infoBooking">เบอร์โทรศัพท์</td>
                <td class="fontAll infoBooking">วันที่</td>
                <td class="fontAll infoBooking ">เวลา</td>
                <td class="fontAll infoBooking">บริการ</td>
                <td class="fontAll infoBooking">พนักงาน</td>
                <td></td>
              </tr> 
              
              <% QueueBookingCustomerData.forEach((bookingCu,element)=>{ %>
              <tr class="infoTable">
                <td class="fontAll "><%= element+1 %></td>
                <td class="fontAll "><%= bookingCu.customerName %> <%=bookingCu.customerFirstname%> <%=bookingCu.customerLastname  %> </td>  <!--ชื่อลูกค้า -->
                <td class="fontAll "><%= bookingCu.phonenum%> </td> <!--เบอร์โทรศัพท์ -->
                <td class="fontAll "><%= bookingCu.booking_date_user %></td>
                <td class="fontAll  "><%= bookingCu.booking_time_user %></td>
                <td class="fontAll "><%= bookingCu.booking_service_user %></td>
                <td class="fontAll "><%= bookingCu.employeeName  %></td> <!--พนักงาน -->
                <td>
                    <a href="./edit-queuebooking/<%= bookingCu._id %>" class="nav-link button" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                    </a>
                </td>
              </tr>
              <% }); %>
              
            </table>
          </div>
      </div>
    
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">เพิ่มการจองคิวลูกค้า</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form action="" method="POST">
              <div class="modal-body">
                <div class="inbody">
                  <div class='row'>
                    <label class="textque">ชื่อลูกค้า</label>
                    <input 
                    type="text" 
                    placeholder="ชื่อลูกค้า" 
                    class="form-control" 
                    name="customerName" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เบอร์โทรศัพท์ลูกค้า</label>
                    <input 
                    type="tel" 
                    placeholder="0xx-xxx-xxxx" 
                    class="form-control" 
                    name="phonenum" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกวันที่</label>
                    <input id="dateBooking"
                    type="date" min="0000-00-00" max="0000-00-00"
                    placeholder="วว/ดด/ปปปป" 
                    class="form-control" 
                    name="booking_date_user" 
                    required>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกบริการ</label>
                    <select name="booking_service_user" class="form-control">
                      <option value="" selected disabled hidden></option>
                      <% ServiceDataList.forEach(serviceData =>{ %> 
                        <option value= "<%= serviceData.service_name  %>"> <%= serviceData.service_name  %> ( <%= serviceData.service_time %> ชั่วโมง ) </option>
                      <% }) %> 
                  </select>
                  </div>

                  <div class='row'>
                    <label class="textque">เลือกเวลา</label>
                    <select name="booking_time_user[]"  class="select-time "  id="select-time"  multiple="multiple" required > 
                       
                      <%  HomeData.forEach(homeData => { %>
                      
                       <%  let timeOpen = parseInt(homeData.time_open); %>
                       <%  let timeForService1  = timeOpen+1;  %>
                       <%  let timeClose = parseInt(homeData.time_close); %>
                      
                       
                           <% for( ; timeOpen < timeClose  ; timeOpen++ ) { %> 
                               <% if(timeOpen<=9) {%> 
                                 <option  value= "0<%= timeOpen %>.00 - <%= timeForService1 %>.00"  class="fontAll "> 0<%= timeOpen %>.00 - <%= timeForService1 %>.00 </option> 
                               <% timeForService1++ %> 
                               <% }else{ %>   
                                 <option  value= "<%= timeOpen %>.00 - <%= timeForService1 %>.00"  class="fontAll "> <%= timeOpen %>.00 - <%= timeForService1 %>.00 </option> 
                                 <% timeForService1++ %> 
                               <% } %>
                           
                           <% } %>
                          
                        
                   <% })  %> 
                     
                 
                   
               </select>

                  <div class='row'>
                    <label class="textque"">เลือกพนักงาน</label>
                    <select name="employeeName" class="form-control">
                      <option value="" selected disabled hidden></option>
                      <% empList.forEach(emp =>{ %> 
                        <option value= "<%= emp.firstname %> <%= emp.lastname %> " > <%= emp.firstname %>  <%= emp.lastname %></option>
                      <% }) %> 
                  </select>
                  </div>

                </div>
              </div>

              <div class="modal-footer">
                <button type="submit" class="buttonbt">บันทึก</button>
                
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- JavaScript-->
      <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" 
        crossorigin="anonymous">
      </script>
      <script 
        src="./js/dateBooking.js" 
        charset="utf-8">
      </script> 

      <script 
        src="./js/select-time.js" 
        charset="utf-8">
      </script>

</body>
</html>