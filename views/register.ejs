    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 ">
      <li><a href="./home-user" id="homeHeader" class=" nav-link px-3 heaDer fontAll ">หน้าแรก</a></li>
      <li><a href="./booking-user" id="bookingHeader"  class="nav-link px-3 heaDer fontAll ">การจองคิว</a></li>
      <li><a href="./service-user" id="servicesHeader" class="nav-link px-3 heaDer fontAll ">บริการของร้าน</a></li>
      <li><a href="./contact-user" id="contactHeader" class="nav-link px-3 heaDer fontAll ">ติดต่อ</a></li>
      
    </ul>

    <div class=" nav me-3 text-end">
      <div><a href="./login-user" class="nav-link fontAll heaDer login">เข้าสู่ระบบ</a></div>
      <div><a href="./register" class="active nav-link fontAll heaDer login">สมัครสมาชิก</a></div>
    </div>

    </header>
  <body style="background-color: #fcf2f1;">

    <div class="edit container edit_info">
        <div style="text-align: center; margin-bottom: 40px; ">
          <i class="fa-solid fa-registered fa-4x" style="color: #f19b9d;"></i>
        </div>

      <form action="/register" method="POST">
      
        <div class="conto ">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input 
                    type="text" 
                    class="form-control" 
                    name="firstname"
                    placeholder="ชื่อ"
                    value="<%= formData.firstname || '' %>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกชื่อ')" 
                      oninput="this.setCustomValidity('')">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" 
                    class="form-control" 
                    name="lastname"
                    placeholder="นามสกุล"
                    value="<%= formData.lastname || ''%>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกนามสกุล')"
                      oninput="this.setCustomValidity('')">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" 
                    class="form-control" 
                    name="nickname"
                    placeholder="ชื่อเล่น"
                    value="<%= formData.nickname || ''%>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกชื่อเล่น')"
                      oninput="this.setCustomValidity('')">
                </div>
                <div class="form-group col-md-6">
                    <input type="text"
                    maxlength="10"
                    class="form-control" 
                    name="phonenum"
                    id="phonenum"
                    placeholder="เบอร์โทรศัพท์"
                    value="<%= formData.phonenum || ''%>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกเบอร์โทรศัพท์')"
                    oninput="this.setCustomValidity('')">
                    <p id="error-message3" style="color: red;"></p>

                    <script>
                        const phoneInput = document.getElementById('phonenum');
                        const errorMessage = document.getElementById('error-message3');
                
                        phoneInput.addEventListener('input', () => {
                            const phoneValue = phoneInput.value.replace(/\D/g, ''); // ลบทุกตัวอักษรที่ไม่ใช่ตัวเลข
                            if (phoneValue.length !== 10) {
                                errorMessage.textContent = 'โปรดป้อนเบอร์โทรศัพท์ 10 ตัวเลข';
                            }else {
                                errorMessage.textContent = '';
                            }
                        });
                    </script>
                      
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" 
                    class="form-control" 
                    name="username"
                    placeholder="ชื่อผู้ใช้"
                    value="<%=''%>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกชื่อผู้ใช้')"
                      oninput="this.setCustomValidity('')">
                  
                      <% if (error && error.length > 0) { %>
                        <div class="error-message2">
                          <i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> <%= error %>
                        </div>
                      <% } %>

                </div>
                
                <div class="form-group col-md-6">
                    <input type="password" 
                    class="form-control"
                    name= "password" 
                    id= "password" 
                    placeholder="รหัสผ่าน"
                    value="<%= formData.password || ''%>"
                    required oninvalid="this.setCustomValidity('กรุณากรอกรหัสผ่าน')"
                      oninput="this.setCustomValidity('')">
                </div>
            </div>

              <button type="submit"class="buttonre"  >สมัครสมาชิก</button>
              
          </form>
        </div>
      </div>
        <%- include ('./footer') %>

    <!-- JavaScript-->
