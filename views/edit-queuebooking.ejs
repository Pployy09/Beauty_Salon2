                                      <% a= QueueBookingCustomerData.booking_time_user.length-1; %>
                                      
                                      <% if(bookingTime[a] == timeCloseQ ){ %>
                                        <% var shopT =(bookingTime[a]+1)+".00"+"-"+bookingTime[a]+".00"%>
                                        <% timeOpenArray.push(shopT) %>
                                        
                                      <% }else{ %>
                                        <% timeOpenArray.push("nah") %>
                                        <% }  %>
                                           
                                     <% } %>
                                       


                                         
                                    
                                          
